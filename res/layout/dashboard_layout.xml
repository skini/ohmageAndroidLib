<?xml version="1.0" encoding="utf-8"?>
<org.ohmage.widget.DashboardLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <Button
        android:id="@+id/dash_campaigns_btn"
        style="@style/DashboardButton"
        android:contentDescription="@string/dashboard_campaigns_btn_description"
        android:drawableTop="@drawable/btn_dashboard_campaigns"
        android:text="@string/dashboard_campaigns" />

    <Button
        android:id="@+id/dash_surveys_btn"
        style="@style/DashboardButton"
        android:contentDescription="@string/dashboard_surveys_btn_description"
        android:drawableTop="@drawable/btn_dashboard_surveys"
        android:text="@string/dashboard_surveys" />

    <Button
        android:id="@+id/dash_feedback_btn"
        style="@style/DashboardButton"
        android:contentDescription="@string/dashboard_feedback_btn_description"
        android:drawableTop="@drawable/btn_dashboard_resphistory"
        android:text="@string/dashboard_response_history" />

    <Button
        android:id="@+id/dash_uploadqueue_btn"
        style="@style/DashboardButton"
        android:contentDescription="@string/dashboard_upload_queue_btn_description"
        android:drawableTop="@drawable/btn_dashboard_upqueue"
        android:text="@string/dashboard_upload_queue" />

    <Button
        android:id="@+id/dash_profile_btn"
        style="@style/DashboardButton"
        android:contentDescription="@string/dashboard_profile_btn_description"
        android:drawableTop="@drawable/btn_dashboard_profile"
        android:text="@string/dashboard_profile" />

    <Button
        android:id="@+id/dash_mobility_btn"
        style="@style/DashboardButton"
        android:contentDescription="@string/dashboard_mobility_btn_description"
        android:drawableTop="@drawable/btn_dashboard_mobility"
        android:text="@string/dashboard_mobility" />
<!-- SHLOKA!!! -->
    <Button
        android:id="@+id/dash_help_btn"
        style="@style/DashboardButton"
        android:contentDescription="@string/dashboard_help_btn_description"
        android:drawableTop="@drawable/btn_dashboard_help"
        android:text="@string/dashboard_help"
        android:visibility="gone" />

</org.ohmage.widget.DashboardLayout>